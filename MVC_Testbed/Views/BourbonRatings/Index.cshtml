@model IEnumerable<MVC_Testbed.Models.BourbonRating>

@{
    ViewData["Title"] = "Index";
}

<h1>Ratings Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bourbon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TastingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Bourbon.Name, "Details", "Bourbons", new { item.Bourbon.Id }, null)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@item.Rating</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TastingDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
